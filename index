<body>

  <h1>Скачать мой файл</h1>
  <button id="downloadBtn">Скачать файл</button>

  <script>
    document.getElementById('downloadBtn').addEventListener('click', () => {
      // Ссылка на твой файл (замени на свой)
      const fileUrl = 'melkiy.prisma'; // файл должен быть в той же папке что и HTML
      const link = document.createElement('a');
      link.href = fileUrl;
      link.download = 'melkiy.prisma'; // имя файла при скачивании
      link.click();
    });
  </script>

